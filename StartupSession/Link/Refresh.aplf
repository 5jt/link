 msg←Refresh ns;link;nsref;⎕IO
 :If U.debug=2
     (1+⊃⎕LC)⎕STOP⊃⎕SI
 :EndIf
 :Trap DEBUG↓0
     ⎕IO←1
     ns←⊃⌽⎕RSI ⎕XSI U.ContainerNs ns
     :If ~0∊⍴nsref←(0 U.GetRefTo)ns
     :AndIf ~0∊⍴link←U.LookupRef nsref
         {}Break nsref
         link.source←'both'
         msg←link Create nsref link.dir
     :Else
         msg←'Not linked: ',ns
     :EndIf
 :Else
     U.Resignal 1
 :EndTrap
